{
  "$schema": "http://json.schemastore.org/template",
  "author": "Your Name",
  "classifications": ["Feature", "VerticalSlice"],
  "name": "Vertical Slice Feature",
  "identity": "Ond.Vsa.FeatureItem",
  "shortName": "feature",
  "tags": { "language": "C#", "type": "item" },
  "sourceName": "Feature",
  "symbols": {
    "FeatureName": {
      "type": "parameter",
      "datatype": "text",
      "description": "The name of the feature",
      "defaultValue": "Feature",
      "replaces": "Feature"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "Features/{{FeatureName}}",
      "rename": [
        { "file": "FeatureController.cs", "renameTo": "{{FeatureName}}Controller.cs" },
        { "file": "Repository/IFeatureRepository.cs", "renameTo": "Repository/I{{FeatureName}}Repository.cs" },
        { "file": "Repository/FeatureRepository.cs", "renameTo": "Repository/{{FeatureName}}Repository.cs" },
        { "file": "Dtos/Request/AddFeatureRequestDto.cs", "renameTo": "Dtos/Request/Add{{FeatureName}}RequestDto.cs" },
        { "file": "Dtos/Request/UpdateFeatureRequestDto.cs", "renameTo": "Dtos/Request/Update{{FeatureName}}RequestDto.cs" },
        { "file": "Dtos/Response/FeatureResponseDto.cs", "renameTo": "Dtos/Response/{{FeatureName}}ResponseDto.cs" },
        { "file": "Requests/CreateFeature/CreateFeatureCommand.cs", "renameTo": "Requests/Create{{FeatureName}}/Create{{FeatureName}}Command.cs" },
        { "file": "Requests/CreateFeature/CreateFeatureCommandHandler.cs", "renameTo": "Requests/Create{{FeatureName}}/Create{{FeatureName}}CommandHandler.cs" }
      ]
    }
  ],
  "primaryOutputs": [
    { "path": "Features/{{FeatureName}}" }
  ]
}
