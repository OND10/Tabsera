{
  "$schema": "http://json.schemastore.org/template",
  "author": "OND",
  "classifications": ["Feature", "VerticalSlice"],
  "name": "Fully Automated VSA Feature",
  "identity": "Ond.Vsa.Feature.Automated",
  "shortName": "vsafeature",
  "tags": { "language": "C#", "type": "item" },
  "sourceName": "Feature",
  "preferNameDirectory": false,
  "symbols": {
    "FeatureName": {
      "type": "parameter",
      "datatype": "text",
      "description": "The name of the feature",
      "defaultValue": "MyFeature",
      "replaces": "Feature"
    }
  },
  "sources": [
    {
      "source": "./",
      "target": "./",
      "exclude": [
        "**/.template.config/**"
      ],
      "rename": [
        { "file": "FeatureController.cs", "renameTo": "Features/{{FeatureName}}/{{FeatureName}}Controller.cs" },
        { "file": "Repository/IFeatureRepository.cs", "renameTo": "Features/{{FeatureName}}/Repository/I{{FeatureName}}Repository.cs" },
        { "file": "Repository/FeatureRepository.cs", "renameTo": "Features/{{FeatureName}}/Repository/{{FeatureName}}Repository.cs" },
        { "file": "Dtos/Request/AddFeatureRequestDto.cs", "renameTo": "Features/{{FeatureName}}/Dtos/Request/Add{{FeatureName}}RequestDto.cs" },
        { "file": "Dtos/Request/UpdateFeatureRequestDto.cs", "renameTo": "Features/{{FeatureName}}/Dtos/Request/Update{{FeatureName}}RequestDto.cs" },
        { "file": "Dtos/Response/FeatureResponseDto.cs", "renameTo": "Features/{{FeatureName}}/Dtos/Response/{{FeatureName}}ResponseDto.cs" },
        { "file": "Requests/CreateFeature/CreateFeatureCommand.cs", "renameTo": "Features/{{FeatureName}}/Requests/Create{{FeatureName}}/Create{{FeatureName}}Command.cs" },
        { "file": "Requests/CreateFeature/CreateFeatureCommandHandler.cs", "renameTo": "Features/{{FeatureName}}/Requests/Create{{FeatureName}}/Create{{FeatureName}}CommandHandler.cs" },
        { "file": "AutoGenerated/Entity.cs", "renameTo": "Data/Entities/{{FeatureName}}.cs" },
        { "file": "AutoGenerated/DbContextExtension.cs", "renameTo": "Data/AppDbContext.{{FeatureName}}.cs" },
        { "file": "AutoGenerated/DependencyInjectionExtension.cs", "renameTo": "Extensions/DependencyInjection.{{FeatureName}}.cs" },
        { "file": "AUTOMATED_SETUP.md", "renameTo": "ðŸš€_{{FeatureName}}_READY.md" }
      ]
    }
  ]
}
